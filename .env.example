# GitHub API設定
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=your_github_username
GITHUB_API_BASE_URL=https://api.github.com

# データベース設定
DATABASE_URL=sqlite:///data/github_metrics.db

# ログ設定
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log

# 出力設定
OUTPUT_DIRECTORY=output
DATA_DIRECTORY=data

# 分析対象設定（カンマ区切り）
TARGET_REPOSITORIES=repo1,repo2,repo3
TARGET_ORGANIZATIONS=org1,org2

# キャッシュ設定
CACHE_ENABLED=true
CACHE_DURATION_HOURS=24

# レポート設定
REPORT_FORMAT=html,pdf,json
REPORT_LANGUAGE=ja

# アプリケーション設定
DEBUG=false
TIMEZONE=Asia/Tokyo