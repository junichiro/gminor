# GitHub リポジトリ生産性メトリクス可視化ツール - 設定ファイルテンプレート
# このファイルを config.yaml にコピーして、あなたの環境に合わせて編集してください
# 注意: GitHub トークンなどの機密情報は .env ファイルに設定してください

# GitHub 設定
github:
  # 監視対象リポジトリリスト（owner/repo 形式）
  # ここにあなたが分析したいリポジトリを追加してください
  repositories:
    - "your-organization/backend-api"     # 例: 組織のバックエンドAPI
    - "your-organization/frontend-app"    # 例: 組織のフロントエンドアプリ
    - "your-username/personal-project"   # 例: 個人プロジェクト
    # - "another-org/mobile-app"         # 例: 他の組織のモバイルアプリ
  
  # データ取得設定
  fetch:
    initial_days: 180      # 初回取得期間（日）
    batch_size: 100        # API 一度の取得数
    rate_limit_buffer: 100 # レート制限バッファ（残り何回で待機）
    timeout: 30            # API リクエストタイムアウト（秒）
  
  # GitHub API 設定
  api_base_url: https://api.github.com

# 集計設定
aggregation:
  week_start_day: "monday"  # 週の開始曜日
  moving_average_window: 4  # 移動平均の週数
  
# データベース設定
database:
  name: "gminor_db"
  # SQLite 接続設定
  connection_pool_size: 5
  connection_timeout: 30
  
# アプリケーション設定
application:
  name: "gminor"
  version: "1.0.0"
  environment: "development"  # development, staging, production
  timezone: "Asia/Tokyo"      # お住まいの地域に合わせて変更してください
  output:
    directory: "output"
    filename: "productivity_chart.html"

# ロギング設定
logging:
  level: "INFO"            # DEBUG, INFO, WARNING, ERROR
  file: "./logs/app.log"
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  max_file_size: "10MB"
  backup_count: 5